extends ../template/template.pug

//- mixin free-space(props={})    задает отступ по ширине и/или высоте
//- mixin block-lib(props={})               размещение блока без собственного заголовка
//- mixin block-lib-self-title(props={})    размещение блока с собственным заголовком

block meta
  meta(name="keywords", content="toxin, form elements")
  meta(name="description" content="Учебный проект FSD. Второе задание. Лист form-elements")

block title
  | Form Elements

block main
  - var elementsFormElements = 'elements-form-elements';
  section(class="" +elementsFormElements )
    .elements-form-elements__logo
      +logo({mods: 'gray'})
  +free-space({height: '60px'})


  section(class="" +elementsFormElements )
    //- Левый блок

    .elements-form-elements__column
      +block-lib({title: 'TEXT FIELD', mods:'DEFAULT', width: '320px'})
        +text-field({placeholder: 'Email'})


      +block-lib({title: 'TEXT FIELD', mods:'HOVER / FOCUS', width: '320px'})
        +text-field({mods: 'focused', placeholder: 'This is pretty awesome'})


      +block-lib({title: 'DROPDOWN', mods: 'DEFAULT', width: '320px'})
        +dropdown({
          moduleClass: 'dropdown-visitors',
          isBtnClear: true,
          isBtnSubmit: true,
          dropStrings: [
            {lineTitle: 'ВЗРОСЛЫЕ', maxCount: '5'},
            {lineTitle: 'ДЕТИ', maxCount: '5'},
            {lineTitle: 'МЛАДЕНЦЫ', maxCount: '5',
            isCountSeparate: true,
            namingForCount: 'младенец,младенца,младенцев'}
          ],
          namingForAll: 'гость,гостя,гостей',
          namingForEmpty: 'Сколько гостей'
          })


      +block-lib({title: 'MASKED-TEXT-FIELD', mods: 'DEFAULT', width: '320px'})
        +masked-text-field({
          placeholder: 'ДД.ММ.ГГГ',
          maskType: 'date'})


      +block-lib({width: '320px'})
        +free-space({height: '14px'})
        .elements-form-elements__container
          .elements-form-elements__half-column
            +block-lib({title: 'DATE DROPDOWN', width: '150px'})
              +date-dropdown({})

          .elements-form-elements__half-column
            +block-lib({title: 'DATE DROPDOWN', width: '150px'})
              +date-dropdown({placeholder: '19.08.2019'})


      +block-lib({title: 'filter date dropdown', width: '266px'})
        +filter-date-dropdown({placeholder: '19 авг - 23 авг'})


      +free-space({height: '20px'})
      +block-lib({title: 'SUBSCRIPTION TEXT FIELD', width: '266px'})
        +subscription-text-field({placeholder: 'Email'})


    //-средний блок
    .elements-form-elements__column
      +block-lib-self-title({width: '222px'})
        +checkbox-buttons({
            listTitle: 'CHECKBOX BUTTONS',
            moduleClass: 'check-list-buttons',
            dropStrings: [
              {dataName: 'checkbox-smoking',
              labelTitle: 'Можно курить'},
              {dataName: 'checkbox-pets',
              labelTitle: 'Можно с питомцами',
              checked: true},
              {dataName: 'checkbox-guests',
              labelTitle: 'Можно пригласить гостей (до 10 человек)',
              checked: true},
              ]
            })


      +free-space({height: '22px'})
      +block-lib-self-title({width: '220px'})
        +radio-buttons({
          labelTitle: 'RADIO BUTTONS',
          radioButtonsSet: 'radio-battons-test',
          buttonsList: [
            {buttonTitle: 'Мужчина',
            buttonValue: 'man',
            checked: true},
            {buttonTitle: 'Женщина',
            buttonValue: 'woman'}
            ]
          })


      +free-space({height: '16px'})
      +block-lib({title: 'TOGGLE', width: '320px'})
        +free-space({height: '10px'})
        +toggle({
          labelTitle: 'Получать спецпредложения',
          moduleClass: 'field-toggle-test',
          checked: true
          })
        +free-space({height: '15px'})
        +toggle({
          labelTitle: 'Получать спецпредложения',
          moduleClass: 'field-toggle-test',
          checked: false
          })


      +free-space({height: '24px'})
      +block-lib({title: 'LIKE BUTTON', width: '90px'})
        +free-space({height: '10px'})
        .elements-form-elements__container
          .elements-form-elements__half-column
            +like-button({
              labelTitle: '2',
              dataName: 'like-button-test'
              })
          .elements-form-elements__half-column
            +free-space({width: '7px'})
            +like-button({
              labelTitle: '12',
              dataClass: 'like-button-test',
              checked: true
              })


      +free-space({height: '20px'})
      +block-lib({title: 'RATE-BUTTON', width: '260px'})
        +free-space({height: '5px'})
        .elements-form-elements__container
          .elements-form-elements__half-column
            +block-lib({width: '120px'})
              +rate-button({
                rate: '4'
              })
          .elements-form-elements__half-column
            +block-lib({width: '120px'})
              +rate-button({
                rate: '5'
              })


    //- Правый блок
    .elements-form-elements__column
      +block-lib-self-title({width: '266px'})
        +range-slider({
          lineTitle: 'RANGE SLIDER',
        })


      +free-space({height: '12px'})
      +block-lib({title: 'BUTTONS', width: '218px'})
        +free-space({height: '12px'})
        .elements-form-elements__container
          .elements-form-elements__half-column
            +buttons({
              lineTitle: 'CLICK ME',
              mods: 'full'
              })
          .elements-form-elements__half-column
            +buttons({
              lineTitle: 'CLICK ME',
              mods: 'full, hover'
              })


      +block-lib-self-title({title: '', width: '218px'})
        +free-space({height: '8px'})
        .elements-form-elements__container
          .elements-form-elements__half-column
            +buttons({
              lineTitle: 'CLICK ME',
              mods: 'border'
              })
          .elements-form-elements__half-column
            +buttons({
              lineTitle: 'CLICK ME',
              mods: 'border, hover'
              })


      +block-lib({title: '', width: '142px'})
        .elements-form-elements__container
          .elements-form-elements__half-column
            +buttons({
              lineTitle: 'CLICK ME',
              mods: 'link'
              })
          .elements-form-elements__half-column
            +buttons({
              lineTitle: 'CLICK ME',
              mods: 'link, dark'
              })


      +block-lib({title: '', width: '320px'})
        +buttons({
          lineTitle: 'ПЕРЕЙТИ К ОПЛАТЕ',
          mods: 'full, arrow, big'
          })


      +free-space({height: '20px'})
      +block-lib({title: 'PAGINATION', width: "240px"})
        +free-space({height: '10px'})
        +pagination({})


  //- 2й ряд
  +free-space({height: '79px'})
  section(class="" +elementsFormElements )
    .elements-form-elements__column
      +block-lib({title: 'DROPDOWN', mods: 'DEFAULT', width: '266px'})
        +dropdown({
          moduleClass: 'dropdown-envarenment-close',
          isBtnClear: false,
          isBtnSubmit: false,
          dropStrings: [
            {lineTitle: 'СПАЛЬНИ', maxCount: '2',
            isCountSeparate: true,
            namingForCount: 'спальня,спальни,спален'},
            {lineTitle: 'КРОВАТИ', minCount: '1', maxCount: '4',
            isCountSeparate: true,
            namingForCount: 'кровать,кровати,кроватей'},
            {lineTitle: 'ВАННЫЕ КОМНАТЫ', maxCount: '2',
            isCountSeparate: true,
            namingForCount: 'ванная комната,ванных комнаты,ванных комнат'}
          ],
          namingForAll: '',
          namingForEmpty: 'Выбрать удобства'
          })


      +block-lib({title: 'DROPDOWN', mods: 'DEFAULT', width: '266px'})
        +dropdown({
          moduleClass: 'dropdown-envarenment-open',
          mods: 'open',
          isBtnClear: false,
          isBtnSubmit: false,
          dropStrings: [
            {lineTitle: 'СПАЛЬНИ', maxCount: '2',
            isCountSeparate: true,
            namingForCount: 'спальня,спальни,спален'},
            {lineTitle: 'КРОВАТИ', minCount: '1', maxCount: '4',
            isCountSeparate: true,
            namingForCount: 'кровать,кровати,кроватей'},
            {lineTitle: 'ВАННЫЕ КОМНАТЫ', maxCount: '2',
            isCountSeparate: true,
            namingForCount: 'ванная комната,ванных комнаты,ванных комнат'}
          ],
          namingForAll: '',
          namingForEmpty: 'Выбрать удобства'
          })


    .elements-form-elements__column
      +block-lib({title: 'DROPDOWN', mods: 'DEFAULT', width: '320px'})
        +dropdown({
          moduleClass: 'dropdown-visitors-without-clear',
          mods: 'open',
          isBtnClear: false,
          isBtnSubmit: true,
          dropStrings: [
            {lineTitle: 'ВЗРОСЛЫЕ', maxCount: '5'},
            {lineTitle: 'ДЕТИ', maxCount: '5'},
            {lineTitle: 'МЛАДЕНЦЫ', maxCount: '5',
            isCountSeparate: true,
            namingForCount: 'младенец,младенца,младенцев'}
          ],
          namingForAll: 'гость,гостя,гостей',
          namingForEmpty: 'Сколько гостей'
          })


    .elements-form-elements__column
      +block-lib({title: 'DROPDOWN', mods: 'DEFAULT', width: '320px'})
        +dropdown({
          moduleClass: 'dropdown-visitors-clear',
          mods: 'open',
          isBtnClear: true,
          isBtnSubmit: true,
          dropStrings: [
            {lineTitle: 'ВЗРОСЛЫЕ', maxCount: '5'},
            {lineTitle: 'ДЕТИ', maxCount: '5'},
            {lineTitle: 'МЛАДЕНЦЫ', maxCount: '5',
            isCountSeparate: true,
            namingForCount: 'младенец,младенца,младенцев'}
          ],
          namingForAll: 'гость,гостя,гостей',
          namingForEmpty: 'Сколько гостей'
          })


  //- 3й ряд
  +free-space({height: '79px'})
  section(class="" +elementsFormElements )
    .elements-form-elements__column
      +block-lib-self-title({width: '266px'})
        +expandable-checkbox-list({
          listTitle: 'EXPANDABLE CHECKBOX LIST',
          moduleClass: 'check-list-test',
          dropStrings: [
            {dataName: 'checkbox-breakfast',
            labelTitle: 'Завтрак'},
            {dataName: 'checkbox-table',
            labelTitle: 'Письменный стол',
            checked: true},
            {dataName: 'checkbox-childChair',
            labelTitle: 'Стул для кормления',
            checked: true},
            {dataName: 'checkbox-childBed',
            labelTitle: 'Кроватка',
            checked: true},
            {dataName: 'checkbox-TV1',
            labelTitle: 'Телевизор'},
            {dataName: 'checkbox-showerGel1',
            labelTitle: 'Шампунь'},
            {dataName: 'checkbox-TV2',
            labelTitle: 'Телевизор'},
            {dataName: 'checkbox-showerGel2',
            labelTitle: 'Шампунь'}
          ]
        })


      +block-lib-self-title({width: '266px'})
        +expandable-checkbox-list({
          listTitle: 'EXPANDABLE CHECKBOX LIST',
          moduleClass: 'check-list-test-open',
          mods: 'open',
          dropStrings: [
            {dataName: 'checkbox-breakfast',
            labelTitle: 'Завтрак'},
            {dataName: 'checkbox-table',
            labelTitle: 'Письменный стол',
            checked: true},
            {dataName: 'checkbox-childChair',
            labelTitle: 'Стул для кормления',
            checked: true},
            {dataName: 'checkbox-childBed',
            labelTitle: 'Кроватка',
            checked: true},
            {dataName: 'checkbox-TV1',
            labelTitle: 'Телевизор'},
            {dataName: 'checkbox-showerGel1',
            labelTitle: 'Шампунь'},
            {dataName: 'checkbox-TV2',
            labelTitle: 'Телевизор'},
            {dataName: 'checkbox-showerGel2',
            labelTitle: 'Шампунь'}
          ]
        })


    .elements-form-elements__column
      +free-space({height: '14px'})
      +block-lib-self-title({width: '266px'})
        +rich-checkbox-buttons({
          listTitle: 'rich checkbox buttons',
          listStrings: [
            {
              labelTitle: 'Широкий коридор',
              labelDiscription: 'Ширина коридоров в номере не менее 91 см.',
              moduleClass: 'rich-checkbox-test'
            },
            {
              labelTitle: 'Помощник для инвалидов',
              labelDiscription: 'На 1 этаже вас встретит специалист  и проводит до номера.',
              moduleClass: 'rich-checkbox-test'
            }
          ]
        })


    .elements-form-elements__column
      +free-space({height: '14px'})
      +block-lib({title: 'BULLET LIST', width: '280px'})
        +bullet-list({
          bulletStrings: [
            {description: 'Нельзя с питомцами'},
            {description: 'Без вечеринок и мероприятий'},
            {description: 'Время прибытия — после 13:00,<br>а выезд до 12:00'}
          ]
        })


  +free-space({height: '190px'})
  section(class="" +elementsFormElements )
    .elements-form-elements__column
      +block-lib({ width: '280px'})
        +icon-text-list({
          iconStrings: [
            {
            icon: 'insert_emoticon',
            lineTitle: 'Комфорт',
            description: 'Шумопоглощающие стены'
            },
            {
            icon: 'location_city',
            lineTitle: 'Удобство',
            description: 'Окно в каждой из спален'
            }
          ]
        })
    

    .elements-form-elements__column
      +free-space({height: '7px'})
      +block-lib({width: '712px'})
        +comment({
          user:    'Мурад Сарафанов',
          photo:   './images/avatar.png',
          date:    '5 дней назад',
          like:    '12',
          likeChecked: true,
          text:    'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'
        })

